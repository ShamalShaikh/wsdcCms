                {% if filled %}
                <h4><center>You have successfully registered for this contest !!!</center></h4>
                {% else %}
                <form action="/conference/registerForContest/" method="post" enctype="multipart/form-data" onsubmit="return validate()">
                {% csrf_token %}
                    <div class="form-group required">
                      <label class="control-label">Select Category for Contest</label>
                      <select class="form-control" name="category">
                        <option>---</option>
                        <option value="1">Transmission Electron Microscopy (TEM)</option>
                        <option value="2">Scanning Electron Microscopy (SEM)</option>
                        <option value="3">Other Micrographs</option>
                      </select>
                    </div>
                    <div class="form-group required">
                        <label class="control-label">Upload Zip file containing micrographs images</label>
                        <input type="file" class="form-control-file" name="zipfile">
                    </div>
                    <center>
                        <br>
                        <button type="submit" class="btn btn-primary btn-lg">Submit</button>
                    </center>
                </form>
