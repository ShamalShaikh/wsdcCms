    function validate(){
        valid = true;
        if($('input[type="file"]').val() == ''){
            valid = false;
            alert('choose some file');
        }
        if (valid && $('input[type="file"]').val().split('.')[1] != 'zip'){
            valid = false;
            alert('only zip file is allowed');
        }
        return valid;
    }
