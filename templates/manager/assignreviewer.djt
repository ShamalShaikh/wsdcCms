{% extends "manager/sidebar.djt" %}
{% load staticfiles %}
{% block content %}

<div class="ui container">
	<center>
	<h1>Assign Reviewers for {{paper.papername}}</h1>
	</center>
	
	<div class="ui segment">
	<table class="ui celled table">
  		<tbody>
		    {% for r in reviewer %}
		    <tr>
		      <td>{{r.user.username}}</td>
		      <td><a href="/manager/reviewerassigned/{{paper.paper_id}}/{{r.id}}"><button class="ui button green" type="submit" id="assign">Assign</button></a></td>
		    </tr>
		    {% endfor %}
	    
  		</tbody>
 	 </table>
	</div>
</div>

<br><br><br>

<div class="ui container">
	<center>
	<h1>Reviewers assigned for {{paper.papername}}</h1>
	</center>
	<div class="ui segment">
	<table class="ui celled table">
  		<tbody>
		    {% for r in reviewer_assigned %}
		    <tr>
		      <td>{{r.user.username}}</td>
		      <td><a href="/manager/reviewcomplete/{{paper.paper_id}}/{{r.id}}/"><button class="ui button green" type="submit" id="assign">Response</button></a></td>
		    </tr>
		    {% endfor %}	    
  		</tbody>
 	 </table>
 	 </div>
</div>

<br><br>
<center>

{% if is_rejected %}
<h2>Status : Rejected</h2>
{% elif is_approved %}
<h2>Status : Approved </h2>
{% elif under_review %}
<h2> Status : Under Review </h2>
{% endif %}
</center>
<br>

<center>
<a href="/manager/allresponses/{{paper.paper_id}}">
<button class="ui button">
  Average Responses
</button>
</a>

<br><br>

<a href="/manager/approvepaper/{{paper.paper_id}}">
<button class="ui button green">
  Approve Paper
</button>
</a>

<a href="/manager/disapprovepaper/{{paper.paper_id}}">
<button class="ui button red">
  Disapprove Paper
</button>
</a>

</center>

{% endblock %}

