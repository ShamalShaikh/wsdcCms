				    <label>10</label>
				      <input type="text" placeholder="Name" name="delegatename10">
				    </div>
				    <div class="four wide field">
				      <input type="text" placeholder="Delegate" name="delegeate10">
				    </div>
				    <div class="three wide field">
				      <input type="number" placeholder="Contact" name="delegatecontact10">
				    </div>
				    <div class="four wide field">
				      <input type="email" placeholder="Email" name="delegateemail10">
				    </div>
				  </div>
				</div>
	        </div>

	        <div class="field">
	              <label>Advertisement matter (pdf file)</label>
	              <div class="field">
	              	<input name="advertFile" type="file" id="advertFile" class="ui button blue">
	        	</div>
	        </div>
	        
	        <div class="field">
	              <label>Login Username</label>
	              <input name="username" placeholder="Username" type="text" id="username" required>
	        </div>
	        <div class="field">
	              <label>Password</label>
	              <input name="password" placeholder="Password" type="password" id="password" required>
	        </div>
	        <div class="field">
	              <label>Confirm-Password</label>
	              <input name="confirm_password" placeholder="ConfirmPassword" type="password" id="confirm_password" required>
	        </div>
	        <input type="number" name="numDelegates" id="numDelegates" hidden>
	        <div style="margin-left: 40%;">
	        <button class="ui button green" type="submit" id="register">Register</button>
	        </div>
		</form>
	</div>
	<br><br>
</div>

{% endblock %}

{% block script %}
	<script type="text/javascript">
		$('.ui.dropdown').dropdown();
		$('#delegateList').hide();

		function showDelegateList(value) {
			$('#delegateList').show();
			// body...
			if(value == "Platinum")
			{
				$('#numDelegates').val(10);

				for(var i = 1; i <= 10; i++)
				{
					var div = "#delagateDiv" + i;
					$(div).show();
				}
			}
			else if(value == "Diamond")
			{
				$('#numDelegates').val(6);
				for(var i = 1; i <= 6; i++)
				{
					var div = "#delagateDiv" + i;
					$(div).show();
				}
				for(var i = 7; i <= 10; i++)
				{
					var div = "#delagateDiv" + i;
					$(div).hide();
				}
			}
			else if(value == "Gold")
			{
				$('#numDelegates').val(4);
				for(var i = 1; i <= 4; i++)
				{
					var div = "#delagateDiv" + i;
					$(div).show();
				}
				for(var i = 5; i <= 10; i++)
				{
					var div = "#delagateDiv" + i;
					$(div).hide();
				}
			}
			else if(value == "Silver")
			{
				$('#numDelegates').val(2);

				for(var i = 1; i <= 2; i++)
				{
					var div = "#delagateDiv" + i;
					$(div).show();
				}
				for(var i = 3; i <= 10; i++)
				{
					var div = "#delagateDiv" + i;
					$(div).hide();
				}
			}
			else if(value == "Bronze")
			{
				$('#numDelegates').val(1);

				for(var i = 1; i <= 1; i++)
				{
					var div = "#delagateDiv" + i;
					$(div).show();
				}
				for(var i = 2; i <= 10; i++)
				{
					var div = "#delagateDiv" + i;
					$(div).hide();
				}
			}
		}

	</script>
{% endblock %}
