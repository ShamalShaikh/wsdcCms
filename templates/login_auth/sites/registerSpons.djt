{% extends "login_auth/layouts/header.djt" %}
{% load staticfiles %}
{% block content %}

<div class="ui container">
	{% if message %}
	<div class="ui negative message" id="errormessage">
		<i class="close icon"></i>
		<div class="header">
		  Network Error
		</div>
		<div>
		  <p>{{message}}</p>
		</div>
	</div>
	{% endif %}


	<div class="ui fluid segment">
		<form class="ui form" action="/registerspons/{{alias}}/" method="post" enctype="multipart/form-data">
			{% csrf_token %}
			<div class="field">
	              <label>Name of Organisation</label>
	              <input name="orgname" placeholder="Name of Organisation" type="text" id="orgname" required maxlength="255">
	        </div>
	        <div class="field">
	              <label>Type of Organisation</label>
	              <input name="orgType" placeholder="Type of Organisation" type="text" id="orgType" required>
	        </div>
	        <div class="field">
	              <label>MD/CCD</label>
	              <input name="mc_ccd" placeholder="MD/CCD" type="text" id="mc_ccd" required>
	        </div>
	        
	        <div class="field">
	              <label>Address Line 1</label>
	              <input name="addr1" placeholder="Address Line 1" type="text" id="addr1" required maxlength="255">
	        </div>
	        <div class="field">
	              <label>Address Line 2</label>
	              <input name="addr2" placeholder="Address Line 2" type="text" id="addr2" required maxlength="255">
	        </div>
	        <div class="field">
	              <label>Email-id</label>
	              <input name="email" placeholder="Email-id" type="text" id="email" required>
	        </div>
	        <div class="field">
	              <label>Contact</label>
	              <input name="contact" placeholder="contact" type="text" id="contact" required>
	        </div>
	       	<div class="field">
	              <label>Category of sponsorship</label>
				  <select id="sponsCategory" onchange="showDelegateList(this.value)" class="ui dropdown" name="sponsCategory" required>
					<option value="">category</option>
					<option value="Platinum">Platinum</option>
					<option value="Diamond">Diamond</option>
					<option value="Gold">Gold</option>
					<option value="Silver">Silver</option>
					<option value="Bronze">Bronze</option>

				  </select>
	        </div>
	        <div id="delegateList" class="ui segment">
		        <label>List of delegated</label>
		        <div class="ui form">
